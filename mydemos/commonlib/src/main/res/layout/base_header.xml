<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_parentLayout_rl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layer_app_title_bottom_border">

    <ImageView
        android:id="@+id/title_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_menu_item"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:src="@drawable/icon_back"
        android:visibility="gone"/>

    <Button
        android:id="@+id/title_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_menu_item"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/green"
        android:textSize="@dimen/h2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_name_tv"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/black_opacity_90"
        android:textSize="@dimen/h1"/>

    <Button
        android:id="@+id/title_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_menu_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/green"
        android:textSize="@dimen/h2"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/title_right_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/title_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_menu_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/layout_white_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        >
        <ProgressBar
            android:id="@+id/progress_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/drawable_progress"
            android:indeterminateDuration="1000"
            />
    </FrameLayout>
</RelativeLayout>